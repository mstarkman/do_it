<li class="<%= task.complete? ? 'completed' : 'view' %>" id="<%= dom_id task %>">
  <div class="view">
    <%= check_box_tag 'complete', "1", task.complete?, class: 'toggle' %>
    <label><%= task.body %></label>
    <%= button_to task_path(task), method: :delete, remote: true, class: "destroy" do %>
    <% end %>
  </div>
  <input class="edit" value="<%= task.body %>">
</li>
